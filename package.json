{
  "name": "rehoukrel-app-template",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.5",
  "scripts": {
    "server:add": "bun add --cwd apps/server",
    "server:remove": "bun remove --cwd apps/server",
    "web:add": "bun add --cwd apps/web",
    "web:remove": "bun remove --cwd apps/web",
    "config:add": "bun add --cwd packages/config",
    "compose:reset": "podman compose down -v && podman compose up -d"
  },
  "workspaces": {
    "catalog": {
      "elysia": "latest",
      "zod": "^4.2.1",
      "@tivecs/core": "^1.3.7",
      "@biomejs/biome": "^2.3.10",
      "@t3-oss/env-core": "^0.13.10",
      "better-auth": "^1.4.7"
    },
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
